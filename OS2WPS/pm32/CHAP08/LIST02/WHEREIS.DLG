            FCF_MINBUTTON | FCF_BORDER | FCF_SYSMENU | FCF_TITLEBAR
        PRESPARAMS PP_BACKGROUNDCOLORINDEX 0x00000000
	{
		WINDOW "", FID_CLIENT, 0, 0, 0, 0, "whereis", WS_VISIBLE | WS_CLIPCHILDREN
		{
			CONTROL "", ID_DIR, 75, 49, 245, 40, WC_LISTBOX, WS_TABSTOP | WS_VISIBLE | LS_MULTIPLESEL | LS_HORZSCROLL
			CONTROL "", ID_DRIVE, 6, 49, 64, 40, WC_LISTBOX, WS_TABSTOP | WS_VISIBLE

